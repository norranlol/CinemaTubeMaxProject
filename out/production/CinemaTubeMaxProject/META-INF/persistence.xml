<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="CinemaProjectCinema" transaction-type="JTA">
		<jta-data-source>jdbc/cinema</jta-data-source>
		<class>model.Account</class>
		<class>model.Cinemahall</class>
		<class>model.Client</class>
		<class>model.Commentary</class>
		<class>model.Film</class>
		<class>model.Session</class>
		<class>model.Ticket</class>
		<class>model.Vacation</class>
	</persistence-unit>
	<persistence-unit name="CinemaProjectBonuses" transaction-type="JTA">
		<jta-data-source>jdbc/bonuses</jta-data-source>
		<class>model.Bonusscore</class>
		<class>model.Discount</class>
		<class>model.History</class>
	</persistence-unit>
</persistence>
